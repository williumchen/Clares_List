<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wchen.clareslist.IntermediateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clare&apos;s List"
        android:id="@+id/welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity = "center"
        android:textColor="#008fff" />

    <Button
        android:id="@+id/posts_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="89dp"
        android:text="My Posts"
        android:background="#008fff"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/welcome"
        android:layout_alignStart="@+id/categories_button" />

    <Button
        android:id="@+id/categories_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:text="Categories"
        android:background="#008fff"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/posts_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />



</RelativeLayout>
